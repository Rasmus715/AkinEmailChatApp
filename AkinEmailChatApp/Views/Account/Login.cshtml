@model AkinEmailChatApp.ViewModels.LoginViewModel

<h2 style="margin: 1em" >Please, log in to use the app</h2>

<div class="row">
<div class="col-xs-6 d-flex justify-content-center validation" asp-validation-summary="ModelOnly"></div>
<div class="col-xs-6 container d-flex justify-content-center">
    <div class="d-flex justify-content-center">
        <div class="d-flex">
            <div class="card" style="width:40rem">
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account">
                        <div class="form-group row" style="margin: 1em">
                            <label asp-for="Name" for="Name" class="col-md-4 col-form-label text-md-right">Name</label>
                            <div class="col-md-6" margin: b>
                                <input asp-for="Name" type="text" id="Name" class="form-control" name="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="col-md-6 offset-md-4">
                            <div class="form-group row" style="margin: 1em">
                                <button type="submit" class="btn btn-primary d-flex justify-content-center">
                                    Log In
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>